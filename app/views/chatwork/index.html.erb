<%= form_for chatwork_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div class="form-group">
    <%= f.label :room_id %>
    <%= f.text_field :room_id %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div><%= submit_tag t "sent_message" %></div>
<% end %>
