<div class="row">
  <div class="col-xs-12 col-sm-6">
    <%= image_tag @product.image.url,
      id: "resize_img_product",
      class: "img-responsive img-thumbnail" if @product.image? %>
  </div>
  <div class="col-xs-12 col-sm-6 product-detail">
    <h3 id="product-title"><%= @product.name %></h3>
    <h4><%= t "products.description" %></h4>
    <%= @product.description %>
    <h4>
      <%= t "products.quantity" %>: <%= @product.quantity %>
    </h4>
    <h4>
      <%= t "products.price" %>: <%= @product.price %>
      <%= t "products.vnd" %>
    </h4>
    <%= rating_for @product, "rating", star: 5 %>
    <div class="btn-group" role="group">
      <%= form_tag carts_path do %>
        <%= hidden_field_tag :product_id, @product.id %>
        <%= number_field_tag :quantity, Settings.cart.init_quantity,
          min: Settings.cart.minimum_quantity, class: "quantity" %>
        <%= button_tag class: "btn btn-primary" do %>
          <i class="glyphicon glyphicon-shopping-cart"></i>
          <%= t "products.add_to_cart" %>
        <% end %>
      <% end %>
    </div>
    <h3>
      <span class="label label-default">
        <%= t "products.rate_point" %>
      </span>
      <span id="average" class="label label-success">
        <%= @product.rate_point %>
      </span>
    </h3>
    <%= social_share_button_tag @product.name, :url => product_url(@product) %>
  </div>
</div>
