<div class="col-md-3 col-sm-6">
  <span class="thumbnail">
    <%= link_to product_path(hot_trend_product) do %>
      <%= image_tag hot_trend_product.image.url %>
    <% end %>
    <h4><%= link_to hot_trend_product.name, product_path(hot_trend_product) %></h4>
    <p>
      <%= truncate hot_trend_product.description, length: Settings.limit_info %>
    </p>
    <hr class="line">
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <p class="price"><%= hot_trend_product.price %></p>
      </div>
      <div class="col-md-6 col-sm-6">
        <%= link_to t("products.add_cart"), class: "btn btn-info right" %>
      </div>
    </div>
  </span>
</div>
