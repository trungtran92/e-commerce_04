<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", :disabled => true %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  <div class="col-md-8">
    </br>
    <%= link_to "" do %>
        <b class="btn btn-primary" role="button" data-toggle="collapse"
           aria-expanded="false" aria-controls="collapseExample"
           href="#collapseRecentlyViewed">
          <%= t "recently_viewed_products" %>
        </b>
    <% end %>

    <%= link_to "" do %>
        <b class="btn btn-success" role="button" data-toggle="collapse"
           aria-expanded="false" aria-controls="collapseExample"
           href="#collapseListOrder">
          <%= t "list_order" %>
        </b>
    <% end %>
    <%= link_to "Logout", logout_path %>
  </div>
</div>
